{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate code for a react web app",
  "main": "src/index.ts",
  "repository": "https://github.com/IgorGee/react-boilerplate.git",
  "author": "Igor Goldvekht",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch webpack --exec 'NODE_ENV=development webpack-dev-server --config ./webpack/webpack.config.babel.js --hot'",
    "build": "NODE_ENV=production webpack --config ./webpack/webpack.config.babel.js",
    "lint:js": "eslint",
    "lint:ts": "tslint",
    "lint:css": "stylelint",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --",
    "precommit": "yarn lint-staged",
    "prepush": "yarn test",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:js"
    ],
    "*.ts": [
      "yarn lint:ts"
    ],
    "*.tsx": [
      "yarn lint:ts",
      "yarn lint:css"
    ]
  },
  "moduleRoots": [
    "src"
  ],
  "jest": {
    "transform": {
      ".tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "./src/setupTests.ts",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/jest": "^23.3.5",
    "@types/node": "^8.5.2",
    "@types/ramda": "^0.25.39",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-router-dom": "^4.3.1",
    "@types/styled-components": "^4.0.1",
    "@types/webpack": "^4.4.17",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "react-hot-loader": "4.3.11",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.5.2",
    "style-loader": "^0.23.1",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-styled-components": "^1.5.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "dependencies": {
    "normalize.css": "^8.0.0",
    "ramda": "^0.25.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-router": "^4.3.1",
    "styled-components": "^4.0.2"
  }
}
