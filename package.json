{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate code for a react web app",
  "main": "index.js",
  "repository": "https://github.com/IgorGee/react-boilerplate.git",
  "author": "Igor Goldvekht",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch webpack.config.babel.js --exec 'webpack-dev-server --env development'",
    "build": "webpack --env production",
    "lint:js": "eslint --ignore-path .gitignore -- .",
    "lint:css": "stylelint ./app/**/*.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "lint:js",
      "lint:css",
      "test"
    ]
  },
  "pre-commit": [
    "precommit-msg",
    "lint-staged"
  ],
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "eslint": "^3.17.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "lint-staged": "^3.3.1",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.0.4",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "styled-components": "^1.4.4"
  }
}
