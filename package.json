{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate code for a react web app",
  "main": "src/index.ts",
  "repository": "https://github.com/IgorGee/react-boilerplate.git",
  "author": "Igor Goldvekht",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch webpack --exec 'webpack-dev-server --env development --config ./webpack/webpack.config.babel.js'",
    "build": "webpack -env production --config ./webpack/webpack.config.babel.js",
    "lint:ts": "tslint",
    "lint:css": "stylelint",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --",
    "precommit": "yarn lint-staged",
    "prepush": "yarn test",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "lint:ts"
    ],
    "*.tsx": [
      "lint:ts",
      "lint:css"
    ]
  },
  "moduleRoots": [
    "src"
  ],
  "jest": {
    "transform": {
      ".tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "./src/setupTests.ts",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx",
      "node"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/html-webpack-plugin": "^2.30.1",
    "@types/jest": "^21.1.9",
    "@types/node": "^8.5.2",
    "@types/ramda": "^0.25.9",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-router-dom": "^4.2.3",
    "@types/webpack": "^3.8.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "nodemon": "^1.14.3",
    "react-hot-loader": "3.1.3",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "style-loader": "^0.19.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-processor-styled-components": "^1.2.1",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "dependencies": {
    "normalize.css": "^7.0.0",
    "ramda": "^0.25.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0",
    "styled-components": "^2.4.0"
  }
}
