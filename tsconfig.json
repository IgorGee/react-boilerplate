{
  "compilerOptions": {
    "outDir": "build/",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "exclude": [
    "coverage",
    "webpack"
  ]
}
